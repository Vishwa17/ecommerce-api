{
  "name": "Product",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "postgresql": {
      "schema": "ecommerce"
    }
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true,
      "postgresql": {
        "dataType": "VARCHAR",
        "dataLength": 64
      }
    },
    "pricing": {
      "type": "number",
      "required": true,
      "postgresql": {
        "dataType": "NUMERIC(10,2)"
      }
    },
    "description": {
      "type": "string"
    },
    "published": {
      "type": "boolean",
      "required": true
    },
    "ratingCache": {
      "type": "number",
      "postgresql": {
        "columnName": "rating_cache"
      }
    },
    "ratingCount": {
      "type": "number",
      "postgresql": {
        "columnName": "rating_count"
      }
    },
    "createdAt": {
      "type": "date",
      "required": true,
      "postgresql": {
        "columnName": "created_at",
        "dataType": "TIMESTAMP"
      }
    },
    "updatedAt": {
      "type": "date",
      "required": true,
      "postgresql": {
        "columnName": "updated_at",
        "dataType": "TIMESTAMP"
      }
    }
  },
  "validations": [],

   
  "relations": {
    "customer": {
      "type": "belongsTo",
      "model": "Customer",
      "foreignKey": "customerId"
    },
    "items": {
      "type": "hasMany",
      "model": "OrderItem",
      "foreignKey": "productId"
    },
    "stored": {
      "type": "hasOne",
      "model": "StoredProduct",
      "foreignKey": "productId"
    },
    "reviews": {
      "type": "hasMany",
      "model": "ProductReview",
      "foreignKey": "productId"
    },
    "images": {
      "type": "hasMany",
      "model": "ProductImage",
      "foreignKey": "productId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
  
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    
    },
    {
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "DENY"
    
    }
  ],
  "methods": {}
}
